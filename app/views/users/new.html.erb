<h3>ユーザー新規作成</h3>
 
 <%= form_with model: @user do |f| %>
  <table>
   <tr>
    <th><%= f.label :title ,"タイトル" %></th>
    <td><%= f.text_field :title %></td>
   </tr>
 
   <tr>
    <th><%= f.label :start ,"開始日" %></th>
    <td><%= f.date_field :start %></td>
   </tr>
 
   <tr>
    <th><%= f.label :finish ,"終了日" %></th>
    <td><%= f.date_field :finish %></td>
    </tr>
    
    <tr>
    <th><%= f.label :day ,"終日" %></th>
    <td><%= f.check_box :day  %>
    <h5>終日の場合はチェックを入れます</h5></td>
    </tr>
 
   <tr>
    <th><%= f.label :schedule ,"スケジュールメモ" %></th>
    <td><%= f.text_area :schedule %></td>
    </tr>
   </table>
 
   <div>
    <ul>
     <li><%= f.submit "スケジュールを新規登録する"%></li>
     <li><%= link_to "スケジュール一覧に戻る", :users %></li>
    </ul>
   </div>
<% end %>